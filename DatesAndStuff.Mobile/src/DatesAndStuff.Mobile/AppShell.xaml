<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DatesAndStuff.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DatesAndStuff.Mobile"
    Title="DatesAndStuff.Mobile">

    <FlyoutItem Title="Home" Icon="house_door_fill.png">
        <ShellContent  ContentTemplate="{DataTemplate local:MainPage}"
 Route="MainPage" />
    </FlyoutItem>

    <FlyoutItem Title="Counter" Icon="plus_square_fill.png">
        <ShellContent ContentTemplate="{DataTemplate local:CounterPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Person" Icon="person.png">
        <ShellContent ContentTemplate="{DataTemplate local:PersonPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Simulation time" Icon="calendar.png">
        <ShellContent ContentTemplate="{DataTemplate local:SimulationTimePage}" />
    </FlyoutItem>

</Shell>
